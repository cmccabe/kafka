{
  "type": "data",
  "name": "MetadataState",
  "validVersions": "0",
  "fields": [
    { "name": "Magic", "type": "int64", "versions": "0+",
      "default": "123", // TODO: use a better magic value
      "about": "The magic number which prefixes this metadata state data." },
    { "name": "Brokers", "type": "[]Broker", "versions": "0+",
      "about": "The brokers in this cluster.", "fields": [
        { "name": "BrokerId", "type": "int32", "versions": "0+", "mapKey": true,
          "about": "The broker id." },
        { "name": "BrokerEpoch", "type": "int64", "versions": "0+",
          "about": "The broker epoch." },
        { "name": "EndPoints", "type": "[]BrokerEndpoint", "versions": "0+",
          "about": "The endpoints that can be used to communicate with this broker.", "fields": [
            { "name": "Name", "type": "string", "versions": "0+", "mapKey": true,
              "about": "The name of the endpoint." },
            { "name": "Host", "type": "string", "versions": "0+",
              "about": "The hostname." },
            { "name": "Port", "type": "int16", "versions": "0+",
              "about": "The port." },
            { "name": "SecurityProtocol", "type": "int16", "versions": "0+",
              "about": "The security protocol." }
        ]},
        { "name": "Rack", "type": "string", "versions": "0+", "nullableVersions": "0+",
          "about": "The broker rack." }
    ]},
    { "name": "Topics", "type": "[]Topic", "versions": "0+",
      "about": "The topics in this cluster.", "fields": [
        { "name": "Name", "type": "string", "versions": "0+", "mapKey": true,
          "about": "The topic name." },
        { "name": "DeletionState", "type": "int8", "versions": "0+", "default": "0",
          "about": "The state of deleting this topic, if it is being deleted." },
        { "name": "Partitions", "type": "[]Partition", "versions": "0+",
          "about": "The partitions in this topic.", "fields": [
            { "name": "Id", "type": "int32", "versions": "0+", "mapKey": true, "default": "-1",
              "about": "The partition id." },
            { "name": "Replicas", "type":  "[]int32", "versions":  "0+",
              "about": "The replicas of this partition, sorted by preferred order." },
            { "name": "Isr", "type":  "[]int32", "versions":  "0+",
              "about": "The in-sync replicas of this partition" },
            { "name": "RemovingReplicas", "type":  "[]int32", "versions":  "0+",
              "about": "The replicas that we are in the process of removing." },
            { "name": "AddingReplicas", "type":  "[]int32", "versions":  "0+",
              "about": "The replicas that we are in the process of adding." },
            { "name": "Leader", "type": "int32", "versions": "0+", "default": "-1",
              "about": "The lead replica, or -1 if there is no leader." },
            { "name": "LeaderEpoch", "type": "int32", "versions": "0+", "default": "-1",
              "about": "The epoch of the lead replica." },
            { "name": "ControllerEpochOfLastIsrUpdate", "type": "int32", "versions": "0+", "default": "-1",
              "about": "The controller epoch of the current ISR znode." }
        ]}
    ]},
    { "name": "Clients", "type": "[]Clients", "versions": "0+",
      "about": "The clients we are tracking in this cluster.", "fields": [
        { "name": "Id", "type": "string", "versions": "0+", "mapKey": true,
          "about": "The client id." },
        { "name": "Config", "type": "[]ClientConfig", "versions": "0+",
          "about": "The configuration for this client.", "fields": [
            { "name": "Key", "type": "string", "versions": "0+", "mapKey": true,
              "about": "The configuration key." },
            { "name": "Value", "type": "string", "versions": "0+",
              "about": "The configuration value." }
        ]}
    ]}
  ]
}
